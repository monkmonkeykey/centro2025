int a = 50 + 5;
int b = 30 + 2;
//"+" en println significa concatenación = unión
println("el valor inicial de a es: " + a);
println("el valor inicial de b es: " + b);
//Las variables van siendo modificadas
//Suma
a = a + 43;
b = b + a;
println("el valor de a es: " + a);
println("el valor de b es: " + b);
//Resta
a = a - 5;
b = b - 10;
println("el valor de a en resta: " + a);
println("el valor de b en resta: " + b);
//Multiplicación
a = a * 5;
b = b * 10;
println("el valor de a en multiplicación es: " + a);
println("el valor de b en multiplicación es: " + b);
//División
a = a / 5;
b = b / 10;
println("el valor de a en división es: " + a);
println("el valor de b en división es: " + b);
